{
	"name": "Default Linux Universal",
	"image": "mcr.microsoft.com/devcontainers/universal:2-linux",
	"features": {
		"ghcr.io/devcontainers-contrib/features/zig:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ziglang.vscode-zig"
			]
		}
	},
	"postCreateCommand": "curl -o /home/codespace/.local/bin/zls 'https://zig.pm/zls/downloads/x86_64-linux/bin/zls' && chmod a+x '/home/codespace/.local/bin/zls'"
}